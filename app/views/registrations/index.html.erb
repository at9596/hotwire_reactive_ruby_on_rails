<%# app/views/registrations/index.html.erb %>
<div class="max-w-md mx-auto p-6 bg-white shadow-md rounded-lg mt-10">
  <h2 class="text-xl font-bold mb-4">User Directory</h2>

  <%= form_with model: User.new, url: registrations_path, 
                data: { controller: "form-reset", action: "turbo:submit-end->form-reset#reset" },
                class: "mb-8" do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.email_field :email, 
          class: "border border-gray-300 p-2 rounded w-full focus:ring-2 focus:ring-blue-500 outline-none", 
          placeholder: "Enter email..." %>
      <%= f.submit "Add User", 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold p-2 rounded transition-colors cursor-pointer" %>
    </div>
  <% end %>

  <div class="border-t pt-4">
    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Recent Users</h3>
    <ul id="users_list" class="divide-y divide-gray-200">
      <%= render partial: "registrations/user", collection: @users, as: :user %>
    </ul>
  </div>
</div>